<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonAvion"
        android:layout_width="224dp"
        android:layout_height="73dp"
        android:backgroundTint="#815ee3"
        android:text="Turn off flight mode"
        android:textsize="18dp"
        app:icon="@drawable/baseline_airplanemode_inactive_24"
        app:layout_constraintBottom_toTopof
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="204dp"
        android:layout_height="91dp"
        android:layout_marginTop="160dp"
        android:backgroundTint="#C9C9C9"
        android:text="Picture saved to gallery"
        android:textColor="#CC0C0C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonAvion" />

    <Button
        android:id="@+id/button3"
        android:layout_width="133dp"
        android:layout_height="59dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="#484D50"
        android:text="Unloked level 5"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="126dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="189dp"
        android:layout_height="72dp"
        android:backgroundTint="#D9525E"
        android:text="Updatting profile"
        app:icon="@drawable/baseline_sync_24"
        tools:layout_editor_absoluteX="510dp"
        tools:layout_editor_absoluteY="1dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="145dp"
        android:layout_height="79dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="#5F94D9"
        android:text="Level 4 completed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="164dp"
        android:layout_height="65dp"
        android:backgroundTint="#48A55F"
        android:text="Music paused"
        app:icon="@drawable/baseline_pause_circle_24"
        tools:layout_editor_absoluteX="518dp"
        tools:layout_editor_absoluteY="258dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="190dp"
        android:layout_height="232dp"
        app:srcCompat="@drawable/android"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="134dp" />

</androidx.constraintlayout.widget.ConstraintLayout>